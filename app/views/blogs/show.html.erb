<!--Preloader-->
<div id="loading" class="preloader">
  <div class="loading-center">
    <div class="loading-center-absolute">
      <div class="object object_one"></div>
      <div class="object object_two"></div>
      <div class="object object_three"></div>
      <div class="object object_four"></div>
    </div>
  </div>
</div>
<!-- Body main wrapper start -->
<div class="wrapper fix">

  <%= render 'shared/nav' %>

  <!-- Hero Area Start -->
  <div id="page-banner-area" class="page-banner-area bg-pattern pb-100 pt-200">
    <div class="container">
      <div class="row">

        <!-- Hero Wrapper Start -->
        <div class="page-banner col-xs-12">

          <h2><%= @blog.title %></h2>
          <ul class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li><a href="#">Blog Details</a></li>
          </ul>

        </div>
        <!-- Hero Wrapper End -->

      </div>
    </div>
  </div>
  <!-- Hero Area End -->

  <!-- Portfolio Details Start -->
  <div id="work-details" class="work-details pb-100 pt-100">
    <div class="container">

      <div class="row">

        <div class="blog-details-wrapper col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 col-xs-12">

          <!-- Single Blog Details -->
          <div class="single-blog-details fix">

            <!-- Blog Details Media -->
            <div class="blog-details-media">
              <img src="img/blog/single.jpg" alt="blog">
            </div>

            <!-- Blog Details Content -->
            <div class="blog-details-content fix">
              <h3 class="blog-title"><%= @blog.title %></h3>
              <div class="blog-meta fix">
                <a href="#"><i class="icon_calendar"></i> <%= @blog.created_at %></a>
                <!--<a href="#"><i class="icon_folder"></i> Web Design</a>-->
              </div>
              <%= @blog.body %>
            </div>

            <!-- Blog Details Footer -->
            <div class="blog-details-footer fix">

              <!-- Blog Details Tags -->
              <div class="blog-tags float-left">
                <p>tags:</p>
                <a href="#">design,</a>
                <a href="#">photoshop,</a>
                <a href="#">web design,</a>
                <a href="#">print</a>
              </div>

              <!-- Blog Details Share -->
              <div class="blog-share float-right">
                <p>share:</p>
                <a href="#"><i class="social_facebook"></i></a>
                <a href="#"><i class="social_twitter"></i></a>
                <a href="#"><i class="social_googleplus"></i></a>
                <a href="#"><i class="social_instagram"></i></a>
              </div>

            </div>

          </div>

          <!-- Comment List -->


          <!-- Comment Form -->


        </div>

      </div>

    </div>
  </div>
  <!-- Portfolio Details End -->

  <%= render 'shared/footer' %>

</div>
<!-- Body main wrapper end -->