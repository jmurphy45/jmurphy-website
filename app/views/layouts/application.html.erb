<!DOCTYPE html>
<html>
  <head>
    <title>Jmurphy</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if current_page?('/') %>
          <%= yield %>
  <% else %>
      <div class="container">
        <div class="row">
          <%= yield %>
        </div>
      </div>
  <% end %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
