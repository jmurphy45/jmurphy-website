<%= form_for(@feedback, id: 'contact-form', :remote=>true) do |form| %>
    <div id="message-confirmation" style="display:none;">

      <p>Message has sucessfully been sent</p>
    </div>

    <div class="input-box-2">
      <div class="input-box"><%= form.text_field :name, id: :feedback_name, placeholder: 'Your Name' %></div>
      <div class="input-box"><%= form.text_field :email, id: :feedback_email, placeholder: 'Your Email' %></div>
    </div>

    <div class="input-box"><%= form.text_area :message, id: :feedback_message, placeholder: 'Your Message' %></div>
    <div class="input-box"><%= form.submit 'submit',id: 'button' %></div>
<% end %>
